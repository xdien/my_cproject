package com.crazy.xdien.imageedit.sliding.draw_;

import android.graphics.Color;

import org.opencv.core.Point;
import org.opencv.core.Scalar;

import java.lang.reflect.Array;
import java.util.ArrayList;

/**
 * Created by xdien on 10/15/14.
 */
public class  InfoOperations {
    public Point pStart;
    public Point pEnd;
    public String text;
    public Scalar colorRGB;
    public int thickness;
    public double ratioText;
    public InfoOperations()
    {
        pEnd = new Point(0,0);
        pStart = new Point(0,0);
        text = "";
        colorRGB = new Scalar(0,3,254);
        thickness = 2;
        ratioText = 1.0;
    }

}
